<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trBatBg"
    android:clickable="true"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/nav_header"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="bottom"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <TextView
                android:text="@string/app_name_en"
                android:textSize="50px"
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:textColor="@color/withe"
                android:gravity="center"
                android:paddingRight="15px"/>
            <TextView
                android:text="@string/version_name"
                android:textSize="50px"
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:textColor="@color/withe"
                android:gravity="center"
                android:paddingLeft="15px"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_footer"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/nav_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <com.goxod.freedom.view.custom.IconView
                android:id="@+id/nav_setting_icon"
                android:text="@string/fa_cog"
                android:textSize="50px"
                android:textColor="@color/withe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="25px"
                android:gravity="center"/>
            <TextView
                android:text="设置"
                android:textSize="50px"
                android:textColor="@color/withe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25px"
                android:gravity="center"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/nav_header"
        android:layout_above="@id/nav_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <LinearLayout
                android:id="@+id/nav_mz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="50px"
                android:paddingBottom="50px"
                android:layout_centerInParent="true">
                <com.goxod.freedom.view.custom.IconView
                    android:id="@+id/nav_zp_icon"
                    android:text="@string/fa_camera"
                    android:textSize="70px"
                    android:textColor="@color/withe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="25px"
                    android:gravity="center"/>
                <TextView
                    android:text="妹子福利"
                    android:textSize="65px"
                    android:textColor="@color/withe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="25px"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:id="@+id/nav_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="50px"
                android:paddingBottom="50px"
                android:layout_centerInParent="true">
                <com.goxod.freedom.view.custom.IconView
                    android:id="@+id/nav_cl_icon"
                    android:text="@string/fa_image"
                    android:textSize="75px"
                    android:textColor="@color/withe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="25px"
                    android:gravity="center"/>
                <TextView
                    android:text="里の世界"
                    android:textSize="65px"
                    android:textColor="@color/withe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="25px"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>