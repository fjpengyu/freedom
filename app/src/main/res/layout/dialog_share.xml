<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/share_image"
        android:layout_width="800px"
        android:layout_height="800px"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/share_image"
        android:background="@color/barColor"
        android:layout_marginTop="30px"
        android:layout_marginBottom="10px"/>

    <RelativeLayout
        android:id="@+id/l_share"
        android:layout_below="@id/v_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px">

        <com.goxod.freedom.view.custom.IconView
            android:id="@+id/txt_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_qq"
            android:textSize="130px"
            android:layout_marginRight="30px"
            android:textColor="@color/share_selector"/>
        <com.goxod.freedom.view.custom.IconView
            android:id="@+id/txt_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_weixin"
            android:layout_toRightOf="@id/txt_qq"
            android:textSize="133px"
            android:layout_marginStart="30px"
            android:layout_marginEnd="30px"
            android:textColor="@color/share_selector"/>

        <com.goxod.freedom.view.custom.IconView
            android:id="@+id/txt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_save"
            android:layout_toRightOf="@id/txt_wx"
            android:textSize="133px"
            android:layout_marginStart="30px"
            android:layout_marginEnd="30px"
            android:textColor="@color/share_selector"/>

        <com.goxod.freedom.view.custom.IconView
            android:id="@+id/txt_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_download"
            android:layout_toRightOf="@id/txt_save"
            android:textSize="133px"
            android:layout_marginLeft="30px"
            android:textColor="@color/share_selector"/>


    </RelativeLayout>

</RelativeLayout>