<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.TechActivity">

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/previous"
            android:text="上一页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="60px"
            android:layout_marginLeft="75px"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:textColor="@color/colorAuthor"
            android:background="@drawable/post_author_selector"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100px"
            android:paddingRight="100px"
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:layout_centerInParent="true"
            android:textSize="60px"/>
        <TextView
            android:id="@+id/next"
            android:text="下一页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="60px"
            android:layout_marginRight="75px"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:textColor="@color/colorAuthor"
            android:background="@drawable/post_author_selector"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:clickable="true"
        android:background="@color/pageListBg"
        >

        <com.goxod.freedom.view.custom.IconView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_heart"
            android:textSize="60px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/titleColor"
            android:layout_marginRight="75px"
            />
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45px"
            android:text="标题"
            android:paddingLeft="50px"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/titleColor"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/favorite"
            android:layout_marginRight="50px"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        >
    </WebView>

    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/loading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:loading_width="5dp"
        app:loading_color="@color/colorAccent"
        android:layout_centerInParent="true" />
</RelativeLayout>
