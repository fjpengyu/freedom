<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="true" android:color="@color/colorPrimary" >
    <shape>
        <solid android:color="@color/listPress" />
        <stroke android:width="1dp"
            android:color="@color/colorGreen"/>
        <corners android:topLeftRadius="10px"
            android:topRightRadius="10px"
            android:bottomRightRadius="10px"
            android:bottomLeftRadius="10px"/>
    </shape>
</item>
<item android:state_focused="true" android:color="@color/colorPrimary" >
    <shape>
        <solid android:color="@color/listPress" />
        <stroke android:width="1dp"
            android:color="@color/colorGreen"/>
        <corners android:topLeftRadius="10px"
            android:topRightRadius="10px"
            android:bottomRightRadius="10px"
            android:bottomLeftRadius="10px"/>
    </shape>
</item>
<item android:state_pressed="true" android:color="@color/colorPrimary" >
    <shape>
        <solid android:color="@color/listPress" />
        <stroke android:width="1dp"
            android:color="@color/colorGreen"/>
        <corners android:topLeftRadius="10px"
            android:topRightRadius="10px"
            android:bottomRightRadius="10px"
            android:bottomLeftRadius="10px"/>
    </shape>

</item>

<item android:color="@color/shareHint"  android:bottom="1dp"
    android:top="1dp">
    <shape>
        <solid android:color="@color/itemBg"/>
        <corners android:topLeftRadius="10px"
            android:topRightRadius="10px"
            android:bottomRightRadius="10px"
            android:bottomLeftRadius="10px"/>
    </shape>
</item>
</selector>